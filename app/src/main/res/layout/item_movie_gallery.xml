<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.udacity.myappportfolio.model.response.MovieResult" />

        <variable
            name="clickHandler"
            type="com.udacity.myappportfolio.adapter.MovieGalleryAdapter.MovieGalleryViewHolder"/>
    </data>
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/image_view_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="@{clickHandler.OnItemClicked}"
        app:imageUrl="@{data.posterPath}" />
